{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/create-payment-intent",
      "dest": "/api/create-payment-intent.ts",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/check-session",
      "dest": "/api/check-session.ts",
      "methods": ["GET", "OPTIONS"]
    },
    {
      "src": "/api/download-pdf",
      "dest": "/api/download-pdf.ts",
      "methods": ["GET", "OPTIONS"]
    },
    { "src": "/api/health", "dest": "/api/health.ts", "methods": ["GET"] }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}