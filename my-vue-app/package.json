{
  "name": "vue-project",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:php": "php -S localhost:8000 -t public",
    "dev:full": "concurrently \"npm run dev:php\" \"npm run dev\"",
    "build": "vite build",
    "build:with-typecheck": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "deploy": "node deploy-ftp.js",
    "deploy:setup": "cp .env.deploy.example .env.deploy && echo 'Please edit .env.deploy with your FTP credentials'",
    "validate:translations": "node scripts/validate-translations.js",
    "validate:translations:verbose": "node scripts/validate-translations.js --verbose",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "pinia": "^3.0.1",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.4",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.0",
    "@storybook/addon-a11y": "^9.1.2",
    "@storybook/addon-docs": "^9.1.2",
    "@storybook/addon-onboarding": "^9.1.2",
    "@storybook/addon-vitest": "^9.1.2",
    "@storybook/vue3-vite": "^9.1.2",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cors": "^2.8.5",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.2",
    "eslint-plugin-vue": "~10.0.0",
    "express": "^5.1.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "sass": "^1.90.0",
    "storybook": "^9.1.2",
    "tailwindcss": "^4.1.12",
    "terser": "^5.43.1",
    "typescript": "~5.8.0",
    "vite": "^6.2.4",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue-tsc": "^2.2.8",
    "vitest": "^3.2.4",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.54.2",
    "@vitest/coverage-v8": "^3.2.4"
  }
}
